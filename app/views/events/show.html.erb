  <div class="container-fluid">

<div class="row-fluid">
  <div class="span3"></div>

  <div class="span7">

    <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

    <div id="top_row" class="row">
      <div class="span2" style="width: 200px;">
       <div id="map" style='width: 200px; height: 200px;'></div>

       <script type="text/javascript">
       handler = Gmaps.build('Google');
       handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers(<%=raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(12);
      });

       </script>
     </div>
     <div class="span4">
      <h1><%= @event.name %></h1>
      <%= link_to "Edit Trip", edit_host_event_path(@event.host_id, @event), :class => "event-edit-link" %>
      <h6>Location: <% if @event.address %><%= @event.address %><% else %> TBD <% end %></h2>

        <h6>Host: <%= @host.name %></h2>
          <h6>Begins at: <% if @event.start_time %><%= @event.start_time.strftime("%l:%M %P") %><% else %> No specified start time <% end %></h2>
            <h6>Begins on: <% if @event.start_day %><%= @event.start_day %><% else %> No specified start day <% end %></h2>
            </div>
            <div class="span2">
             <%= render 'guests/guests', :event => @event %>
           </div>
         </div>
       </div>
     </div>

   </div>
   <div class="span2"></div>
 </div>

</div>

<hr />















<div class="container-fluid">
 <div class="row-fluid">
  <div class="span4"></div>
  <div class="span4" >
    <h4 style="text-align:center;">Invite Guests:</h4>
      <div id="add_guest_form">
      <%= form_for(@guest, url: event_guests_path(@event), :remote => true) do |f| %>
      <%= f.text_field :name, :placeholder => "name" %><br />
      <%= f.text_field :email, :placeholder => "email" %>
      <br />
      <%= f.submit "Send Invitation", :class => "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="span4"></div>
</div>
</div>



<div class="container-fluid">
 <div class="row-fluid">
  <div class="span4"></div>
  <div class="span4" >
    <h4 style="text-align:center;">Add Items:</h4>
      <div id="add_item_form">
      <%= form_for(@item, url: event_items_path(@event), :remote => true) do |f| %>
      <%= f.text_field :name, :placeholder => "item name" %>
      <br />
      <%= f.submit :class => "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="span4"></div>
</div>
</div>



<hr />


<div class="container-fluid">
 <div class="row-fluid">
  <div class="span3"></div>
  <div class="span6" >
       <%= render 'items/items', :items => @event.items, :event => @event, :completion => @completion %>


  </div>
  </div>
  <div class="span3"></div>
</div>
</div>
