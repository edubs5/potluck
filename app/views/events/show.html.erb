<h1><%= @event.name %></h1>
<h6>Location: <% if @event.address %><%= @event.address %><% else %> TBD <% end %></h2>
<h6>Organizer: <%= @host.name %></h2>

<%= form_for(@item, url: event_items_path(@event), :remote => true) do |f| %>
  Add Item: <%= f.text_field :name %>
        <%= f.submit  %>
<% end %>

<h3>List Items:</h3>
<div class="row">
<div id="item-list" class="span9">
<%= render 'items/items', items: @items %>
</div>
<div class="span3">

  <%- model_class = Item -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Who's coming:</th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td><%= @host.name %></td>
    </tr>
  <% @guests.each do |guest| %>
    <tr>
      <td><%= guest.name %></td>
    </tr>
  <% end %>
</tbody>
</table>

</div>
</div>