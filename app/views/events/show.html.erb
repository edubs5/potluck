     <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
     <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


     <div class="container-fluid">

      <div class="row-fluid">
        <div class="span3"></div>

        <div class="span8">

          <div class="container-fluid">
           <div class="row-fluid">

            <div id="map-wrapper" class="span3">
             <div id="map" style='width: 200px; height: 200px;'></div>
             <script type="text/javascript">
             handler = Gmaps.build('Google');
             handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers(<%=raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              handler.getMap().setZoom(12);
            });
             </script>

           </div>
           <div class="span7" >
            <h2><%= @event.name %></h2>
            <%= link_to "Edit Trip", edit_host_event_path(@event.host_id, @event), :class => "event-edit-link btn btn-warning" %>
            <h6>Location: <% if @event.address %><%= @event.address %><% else %> TBD <% end %></h2>

              <h6>Host: <%= @host.name %></h2>
                <h6>Begins at: <% if @event.start_time %><%= @event.start_time.strftime("%l:%M %P") %><% else %> No specified start time <% end %></h2>
                  <h6>Begins on: <% if @event.start_day %><%= @event.start_day %><% else %> No specified start day <% end %></h2>
                  </div>
                </div>


              </div>

              <hr />

              <div id="invite_guests" class="container-fluid">
               <div class="row-fluid">
                <div class="span3"></div>
                <div class="span6">
                  <div id="add_guest_form">
                    <%= form_for(@guest, url: event_guests_path(@event), :remote => true) do |f| %>
                    <%= f.text_field :name, :placeholder => "your friend's name" %><br />
                    <%= f.text_field :email, :placeholder => "your friend's email" %>
                    <br />
                    <div id="button_rapper" style="width: 100%"><%= f.submit "Send Invitation", :class => "btn btn-success" %></div>
                    <% end %>
                  </div>
                </div>
                <div class="span3"></div>
              </div>
            </div>

            <div class="container-fluid">
             <div class="row-fluid">

              <div class="span12" id="guest-list" >
               <%= render 'guests/guests', :event => @event %>
             </div>
           </div>

         </div>


         <hr />


         <div id="add_items" class="container-fluid">
           <div class="row-fluid">

            <div class="span12" >
              <div class="container-fluid">
               <div class="row-fluid">
                <div class="span3"></div>
                <div class="span6" >
                  <div id="add_item_form">
                    <%= form_for(@item, url: event_items_path(@event), :remote => true) do |f| %>
                    <%= f.text_field :name, :placeholder => "food, camping gear, etc." %>
                    <br />
                    <div id="button_rapper"><%= f.submit "Add Item", :class => "btn btn-success" %></div>
                    <% end %>
                  </div>
                </div>
                <div class="span3"></div>
              </div>
            </div>

            <div id="event_progress_bar" class="progress progress-striped" style="text-align: center;">
              <div class="bar" style="width: <%= @completion %>%;"></div>
            </div>
            <div id="progress_message">Camping trip is <strong><%= @completion %>%</strong> covered.</div>


            <div id="item-list">
              <%= render 'items/items', :items => @event.items, :event => @event, :completion => @completion %>
            </div>
          </div>
        </div>

      </div>
    </div>
