<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


<div class="container-fluid">

  <div class="row-fluid">
    <div class="span3"></div>

    <div class="span8">

      <div class="container-fluid">
       <div class="row-fluid">

        <div id="map-wrapper" class="span3">
         <div id="map" style='width: 200px; height: 200px;'></div>
         <script type="text/javascript">
         handler = Gmaps.build('Google');
         handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          handler.getMap().setZoom(12);
        });
         </script>

       </div>
       <div class="span7" >
        <h2><%= @event.name %></h2>
        <%= link_to "Edit Trip", edit_host_event_path(@event.host_id, @event), :class => "event-edit-link" %>
        <h6>Location: <% if @event.address %><%= @event.address %><% else %> TBD <% end %></h6>

        <h6>Host: <%= @host.name %></h6>
        <% guests = @event.guests.map { |guest| guest.name } %>
        <h6>Who's Coming: <%= guests.join(', ') %>&nbsp;&nbsp;<a href="#" class="btn btn-mini" data-toggle="modal" data-target="#invite_guests">Invite More People</a></h6>
        <h6>Begins at: <% if @event.start_time %><%= @event.start_time.strftime("%l:%M %P") %><% else %> No specified start time <% end %></h6>
        <h6>Begins on: <% if @event.start_day %><%= @event.start_day %><% else %> No specified start day <% end %></h6>
      </div>
    </div>


  </div>

  <hr />

  <div id="invite_guests" class="container-fluid modal fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
   <div class="row-fluid">
    <div class="span3"></div>
    <div class="span6">
      <h4>Invite Guests:</h4>
      <div id="add_guest_form">
        <%= form_for(@guest, url: event_guests_path(@event), :remote => true) do |f| %>
        <%= f.text_field :name, :placeholder => "name" %><br />
        <%= f.text_field :email, :placeholder => "email" %>
        <br />
        <%= f.submit "Send Invitation", :class => "btn btn-success" %>
        <% end %>
      </div>
    </div>
    <div class="span3"></div>
  </div>
</div>

<% if false %>
<%= link_to "Who's Coming?", "#", id: "guestshow",  class: "btn btn-large btn-primary" %>
<div id="guestslist">
  <div class="container-fluid">
    <div class="row-fluid">

      <div class="span12" id="guest-list" class="hidden" >
       <%= render 'guests/guests', :event => @event %>
     </div>
   </div>
 </div>
</div>

<hr />
<% end %>


  <div id="event_progress_bar" class="progress progress-striped">
    <div class="bar" style="width: <%= @completion %>%;">Camping trip is <%= @completion %>% covered.</div>
  </div>

  <div id="item-list">
    <div id="add_item_form row">
      <%= form_for(@item, url: event_items_path(@event), :remote => true) do |f| %>
      <%= f.text_field :name, :placeholder => "add another item", :class => "span10" %>
      <%= f.submit :class => "btn btn-success btn-mini span2" %>
      <% end %>
    </div>
    <%= render 'items/items', :items => @event.items, :event => @event, :completion => @completion %>

  </div>
</div>
</div>
</div>
</div>
