<%- model_class = Event -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:delete_item) %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
    <tr>
     <td> <%= link_to "#{event.name}", host_event_path(@host, event) %></td>
     <td> <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      host_event_path(@host, event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %> </td>
    </tr>
  <% end %>
</tbody>
</table>