<%- model_class = Event -%>

<table class="table table-striped">
  <thead>
    <tr>

    </tr>
  </thead>
  <tbody>

    <tr>
      <% @events.each do |event| %>
     <td> <%= link_to "#{event.name}", host_event_path(@host, event) %></td>
     <td><%= event.camp_site %></td>
     <td><%= event.start_day %> - <%= event.end_day %></td>
     <td> <%= link_to "X", host_event_path(@host, event),
     :method => :delete,
     :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
     :class => 'btn btn-mini btn-danger event-delete' %></td>
   </tr>
   <% end %>
 </tbody>
</table>